<main class="recipe-container">
  <div class="recipe-header">
    <h2>
      <%= @recipe.name %>
    </h2>
    <div>
      <p> Preparation Time: <%= @recipe.preparation_time %> </p>
      <span> <p>Public</p> </span>
    </div>
    <div>
      <p>Cooking Time: <%= @recipe.cooking_time %></p>
    </div>
    <div>
      <h2>Description:</h2>
      <p> <%= @recipe.description %> </p>
    </div>
    <div>
      <button>Generate Shopping List</button>
      <%= link_to 'Add Ingredient', new_recipe_recipe_food_path(@recipe), class: 'button-class' %>
    </div>
  </div>
  <hr>
  <table class="recipe-foods-table">
    <thead>
      <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Value</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @recipe.recipe_foods.each do |recipe_food| %>
        <tr>
          <td> <%= recipe_food.name %> </td>
          <td> <%= recipe_food.quantitiy %> </td>
          <td> <%= recipe_food.value %> </td>
          <td>
            <div>
              <%= link_to 'Modify', recipe_foods_path(recipe_id: @recipe.id, id: recipe_food.id), class:'button-class' %>
              <%= link_to 'Remove', recipe_foods_path(), class:'button-class' %>
            </div>
          </td>
        </tr>
      <% end%>
    </tbody>
  </table>
</main>